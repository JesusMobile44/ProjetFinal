<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AventureController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Changer De Mode">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Menu" onAction="#setMenu"/>
                        <MenuItem mnemonicParsing="false" text="Mode Sandbox" onAction="#setSandbox"/>
                        <MenuItem mnemonicParsing="false" text="Guide" onAction="#setGuide"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <SplitPane fx:id="mySplitPane" dividerPositions="0.6565656565656566" prefHeight="160.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER">
            <items>
                <ScrollPane fx:id="scroll" prefHeight="200.0" prefWidth="200.0"/>
                <SplitPane dividerPositions="0.3282828282828283" orientation="VERTICAL" prefHeight="200.0"
                           prefWidth="160.0">
                    <items>
                        <FlowPane fx:id="affichageDescription" prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#verificationStage" text="Button"/>
                            </children>
                        </FlowPane>
                        <ScrollPane fx:id="myScrollPane" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0">
                            <content>
                                <FlowPane prefHeight="200.0" prefWidth="200.0"/>
                            </content>
                        </ScrollPane>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
